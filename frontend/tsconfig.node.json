{
  "extends": "./tsconfig.json", // إذا كان لديك ملف tsconfig.json رئيسي
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "../backend/src/shared/**/*.ts" // تضمين الملفات المطلوبة
  ]
}
